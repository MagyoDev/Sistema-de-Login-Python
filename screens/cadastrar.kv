MDScreen:
    name: "cadastrar"

    on_pre_enter:
        self.ids.float_layout.size = self.size

    BoxLayout:
        orientation: "vertical"

        FloatLayout:
            id: float_layout
            specific_text_color: app.theme_cls.primary_color
            elevation: 0
            size_hint: None, None
            size: root.width, root.height - self.parent.children[0].height

            MDLabel:
                text: "Criar Nova Conta"
                font_style: "H5"
                bold: True
                halign: "center"
                pos_hint: {"center_x": 0.5, "center_y": 0.65}

            MDTextField:
                id: nome_field
                hint_text: "Nome"
                pos_hint: {"center_x": 0.5, "center_y": 0.55}
                size_hint_x: .8
                icon_right: "account"
                icon_right_color: app.theme_cls.primary_color

            MDTextField:
                id: email_field
                hint_text: "Email"
                pos_hint: {"center_x": 0.5, "center_y": 0.45}
                size_hint_x: .8
                icon_right: "email"
                icon_right_color: app.theme_cls.primary_color

            MDTextField:
                id: senha_field
                hint_text: "Senha"
                pos_hint: {"center_x": 0.5, "center_y": 0.35}
                size_hint_x: .8
                password: True
                icon_right: "key-variant"
                icon_right_color: app.theme_cls.primary_color

            MDRaisedButton:
                text: "Cadastrar"
                elevation: 0
                pos_hint: {"center_x": .5, "center_y": .05}
                size_hint_x: .8
                on_release:
                    app.cadastrar(nome_field.text, email_field.text, senha_field.text)
