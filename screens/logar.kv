MDScreen:
    name: "logar"

    on_pre_enter:
        self.ids.float_layout.size = self.size

    BoxLayout:
        orientation: "vertical"

        FloatLayout:
            id: float_layout
            specific_text_color: app.theme_cls.primary_color
            elevation: 0
            size_hint: None, None
            size: root.width, root.height - self.parent.children[0].height

            MDLabel:
                text: "Logar"
                font_style: "H5"
                bold: True
                halign: "center"
                pos_hint: {"center_x": 0.5, "center_y": 0.8}

            MDTextField:
                id: email_field
                hint_text: "Email"
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                size_hint_x: .8
                icon_right: "email"
                icon_right_color: app.theme_cls.primary_color

            MDTextField:
                id: password_field
                hint_text: "Senha"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint_x: .8
                password: True
                icon_right: "key-variant"
                icon_right_color: app.theme_cls.primary_color

            MDRaisedButton:
                text: "LOGIN"
                elevation: 0
                pos_hint: {"center_x": .5, "center_y": .4}
                size_hint_x: .8
                on_release:
                    app.login_conta(email_field.text, password_field.text)
